<header>
    <div class="logo-container">
        @Html.ActionLink(" ", "Index", "Home", null, new { @class = "logo" })
    </div>
    <div class="header_info">
        <div class="video btn">
            <span class="title">Watch video</span>
            <button class="eng btn">Eng</button>
            <button class="ru btn">Ru</button>
        </div>
        <div class="header_right">
            <div class="user_info @(User.Identity.IsAuthenticated ? "active" : "")">@Html.Action("getBalance", "Account")</div>
                @*@Html.ActionLink("My Positions | Orders", "MyAssets", "Home", new {}, new { @class = " my_order btn" })
                <a href="#" class="btn deposit">Deposit</a>*@
            @*<button class="price_plan btn">Pricing Plans</button>*@
