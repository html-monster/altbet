@{
    ViewBag.Title = "Altbet";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}
<div id="p_prldr">
    <div class="contpre">
        <span class="svg_anm">
        </span> <br> <br>
        Loading ...
    </div>
</div>
<div class="first_page_wrapper">
    <div class="main_bg"></div>
    <header class="first_page">
        <div class="header_info">
            <div class="logo-container">
                @Html.ActionLink(" ", "Index", "Home", new { }, new { @class = "logo" })
            </div>
            <div class="header_right">
                <ul id="menu" class="page_menu">
                    @if(!User.Identity.IsAuthenticated) {<li data-menuanchor="firstPage" class="active"><a href="#firstPage">Start</a></li>}
                    <li data-menuanchor="secondPage"><a href="#secondPage">Main</a></li>
                    <li data-menuanchor="thirdPage"><a href="#thirdPage">Contacts</a></li>
                    <li data-menuanchor="fourthPage"><a href="#fourthPage">More</a></li>
                    <li data-menuanchor="lastPage"><a href="#lastPage">Pricing</a></li>
                </ul>
                <div class="user">
                    <div class="log_in @(User.Identity.IsAuthenticated ? "active" : "")">
                        <ul class="user-menu">
                            <li><a href="user_page.html">Account</a></li>
                            <li><a href=@Url.Action("Logout", "Account")>Log out</a></li>
                        </ul>
                        <span class="user-name">@User.Identity.Name</span>
                    </div>
                    <div class="log_out @(!User.Identity.IsAuthenticated ? "active" : "")">
                        <a href=@Url.Action("Index", "Account") class="sign_in">Join/Login</a>
                    </div>
                </div>
            </div>
        </div>
        <script>
            var globalData = {
                userIdentity: '@User.Identity.IsAuthenticated',
                rootUrl: '@Url.Content("~/")',
                landingPage: true
            }
        </script>

    </header>


