                                    <a href="#pop-up" class="fancybox">sing in</a>
                                </li>
                                <li>
                                    <a href=@Url.Action("Index", "Account")>sing up</a>
                                </li>
                              }
                              else
                              {
                                <li>
                                    @Html.Encode(User.Identity.Name)
                                </li>
                                <li>
                                    <a href=@Url.Action("Logout", "Account")>logout</a>
                                </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </header>
        </div>
        @RenderBody();
    </section>
