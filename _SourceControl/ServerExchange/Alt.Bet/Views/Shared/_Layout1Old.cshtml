    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fancybox")
    @Scripts.Render("~/bundles/common")
    <div class="hidden">
        <div id="pop-up">
            @using (@Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <row>
                    <h2>sing in</h2>
                    <div class="col-md-6">
                        <input type="submit" id="face" value="Sign in with Facebook">
                    </div>
                    <div class="col-md-6">
                        <input type="submit" id="twitter" value="Sign in with Twitter">
                    </div>
                    @*<div class="col-md-6">
                            @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", type = "text", id = "name" })
                        </div>
                        <div class="col-md-6">
                            <input type="text" id="Lastname" placeholder="Lastname" disabled="disabled">
                        </div>*@
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Email, new { placeholder = "example@mail.ru", type = "email", id = "mail" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Password, new { placeholder = "Password", type = "password", id = "password" })
                        <h3>captcha</h3>
                    </div>
                    <div class="col-md-5">
                        <div class="captca"><img src="~/../Images/CAPTCHAimg.png"></div>
                    </div>
                    <div class="col-md-5">
                        <input type="text" id="captcha">
                    </div>
                    <div class="col-md-2"><img src="~/../Images/Recaptcha.png"></div>
                    <div class="col-md-12">
                        <input type="submit" id="regis" value="sing in">
                    </div>
                </row>
            }
        </div>
