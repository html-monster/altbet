@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<script type="text/javascript">
    globalData.controller = { name: "Login", action: "View" };
</script>

<div class="login-box">
  <div class="login-logo">
    <span><b>Altbet</b></span>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
      <p class="login-box-msg"><span class="wellcome" data-js-wellcome="">Sign in to start your session</span><span class="-red" data-js-error="" style="display: none"><i class="fa fa-times-circle-o"></i> <span></span></span></p>

      @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "F1Loginform" }))
      {
        <div class="form-group has-feedback">
            <input class="form-control" name="User" placeholder="User name" data-field-check="name:User name,empty" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" type="text" autofocus/>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input class="form-control" name="Password" placeholder="Password" data-field-check="name:Password,empty" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" type="password"/>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8"></div>
            <!-- /.col -->
            <div class="col-xs-12 login-btn-submit">
                <div class="loading-inline" data-js-loading=""></div><button type="submit" class="btn btn-primary btn-block btn-flat" data-js-btn-login="">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
      }
@*    <a href="#">I forgot my password</a><br>*@
  </div>
</div>